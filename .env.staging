APP_NAME="Z.E.N.A Management (Staging)"
APP_ENV=staging
APP_KEY=base64:your-staging-app-key-here
APP_DEBUG=true
APP_URL=https://staging.your-domain.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=zena_staging
DB_USERNAME=zena_staging
DB_PASSWORD=staging_password_here

# Cache & Session
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Mailtrap for staging)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="staging@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret-key-here
JWT_TTL=60
JWT_REFRESH_TTL=20160

# WebSocket Configuration
WEBSOCKET_HOST=websocket
WEBSOCKET_PORT=8080
WEBSOCKET_SCHEME=ws

# File Storage
FILESYSTEM_DISK=local
MAX_UPLOAD_SIZE=10240

# Security (less strict for staging)
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax