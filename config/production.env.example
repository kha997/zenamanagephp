# Production Environment Configuration Template
# Copy this content to your .env.production file and customize for your production environment

# Application Configuration
APP_NAME="ZenaManage"
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=your-production-db-host
DB_PORT=3306
DB_DATABASE=zenamanage_production
DB_USERNAME=your-production-db-user
DB_PASSWORD=your-secure-production-db-password

# Cache Configuration
CACHE_DRIVER=redis
REDIS_HOST=your-redis-host
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_REDIS_HOST=your-redis-host
QUEUE_REDIS_PASSWORD=your-redis-password
QUEUE_REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=warning
LOG_STRUCTURED=true
LOG_REQUEST_ID=true
LOG_PII_REDACTION=true
LOG_PERFORMANCE=true
LOG_AUDIT=true

# Security Configuration
BCRYPT_ROUNDS=12
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com
SANCTUM_GUARD=web

# Performance Configuration
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_INTERNED_STRINGS_BUFFER=8
OPCACHE_MAX_ACCELERATED_FILES=4000
OPCACHE_REVALIDATE_FREQ=2
OPCACHE_FAST_SHUTDOWN=1

# Monitoring Configuration
SENTRY_LARAVEL_DSN=your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Backup Configuration
BACKUP_DISK=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-backup-bucket

# CDN Configuration
CDN_URL=https://your-cdn-domain.com
ASSET_URL=https://your-cdn-domain.com

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_AUDIT_LOGGING=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_RATE_LIMITING=true
FEATURE_SECURITY_HEADERS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60,1
RATE_LIMIT_API=100,1
RATE_LIMIT_AUTH=5,1

# Multi-tenant Configuration
TENANT_DOMAIN_SEPARATOR=.
TENANT_SUBDOMAIN_ENABLED=true
TENANT_DATABASE_SEPARATION=false

# API Configuration
API_RATE_LIMIT=1000,1
API_CACHE_TTL=300
API_RESPONSE_COMPRESSION=true

# File Storage
FILESYSTEM_DISK=s3
AWS_BUCKET_FILES=your-files-bucket

# Search Configuration
SCOUT_DRIVER=algolia
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_SECRET=your-algolia-secret

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_ALLOWED_IPS=127.0.0.1,your-admin-ip

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_MEMORY_THRESHOLD=80
HEALTH_CHECK_DISK_THRESHOLD=90

# Performance Thresholds
PERFORMANCE_PAGE_THRESHOLD=500
PERFORMANCE_API_THRESHOLD=300
PERFORMANCE_DB_THRESHOLD=100
PERFORMANCE_CACHE_THRESHOLD=90

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_HSTS_ENABLED=true
SECURITY_RATE_LIMITING_ENABLED=true

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_COMPRESSION=true
AUDIT_LOG_ENCRYPTION=true

# Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_LEVEL=warning
ERROR_REPORTING_CHANNEL=sentry

# Database Optimization
DB_OPTIMIZATION_ENABLED=true
DB_QUERY_CACHE_ENABLED=true
DB_CONNECTION_POOLING=true
DB_READ_REPLICA_ENABLED=false

# Cache Optimization
CACHE_TAGS_ENABLED=true
CACHE_COMPRESSION_ENABLED=true
CACHE_PERSISTENT_ENABLED=true

# Asset Optimization
ASSET_VERSIONING_ENABLED=true
ASSET_COMPRESSION_ENABLED=true
ASSET_MINIFICATION_ENABLED=true
ASSET_CDN_ENABLED=true
