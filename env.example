# Application Configuration
APP_NAME="ZenaManage Dashboard"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=zenamanage
DB_USERNAME=root
DB_PASSWORD=

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_REQUIRED_FOR_TESTS=0

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# API migration flags
API_MIGRATION_DOCS_URL=
API_MIGRATION_SUNSET=
API_CANONICAL_PROJECTS=false
API_CANONICAL_DOCUMENTS=false
API_CANONICAL_INSPECTIONS=false

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@zenamanage.com"
MAIL_FROM_NAME="${APP_NAME}"

# WebSocket Configuration
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8080
WEBSOCKET_SSL=false

# Dashboard Configuration
DASHBOARD_DEFAULT_THEME=light
DASHBOARD_DEFAULT_REFRESH_INTERVAL=300
DASHBOARD_MAX_WIDGETS_PER_USER=50
DASHBOARD_CACHE_TTL=3600

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000,::1
SESSION_DOMAIN=localhost
SESSION_SECURE_COOKIE=false

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting Configuration
BROADCAST_DRIVER=redis
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# File Storage Configuration
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Third-party Integrations
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Performance Configuration
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_INTERNED_STRINGS_BUFFER=8
OPCACHE_MAX_ACCELERATED_FILES=4000
OPCACHE_REVALIDATE_FREQ=2
OPCACHE_FAST_SHUTDOWN=1

# Monitoring Configuration
TELESCOPE_ENABLED=true
TELESCOPE_PATH=telescope
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# Development Tools
DEBUGBAR_ENABLED=true
IDE_HELPER_ENABLED=true

# RBAC testing overrides
RBAC_BYPASS_TESTING=1

# Performance assertions flag (skip timing checks when 0, enable with 1)
PERF_ASSERTIONS=0
