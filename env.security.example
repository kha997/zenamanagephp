# ZenaManage Security Center Configuration

# Application
APP_NAME=ZenaManage
APP_ENV=production
APP_KEY=base64:your-app-key-here
APP_DEBUG=false
APP_URL=https://zenamanage.com

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=zenamanage
DB_USERNAME=zenamanage_user
DB_PASSWORD=your-secure-password

# Broadcasting (for real-time security events)
BROADCAST_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis (required for broadcasting and rate limiting)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your-redis-password-here
REDIS_PORT=6379

# Sanctum (API authentication)
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,zenamanage.com
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Security Configuration
SECURITY_AUTH_BYPASS=false
SECURITY_ALLOW_TEST_EVENT=false
SEC_EVENT_MAX_QUEUE=1000
AUDIT_MAX_RANGE_DAYS=90
RATE_LIMIT_EXPORT_PER_MIN=10
RATE_LIMIT_TEST_EVENT_PER_MIN=5

# Development/Testing Flags (NEVER enable in production)
AUTH_BYPASS_ENABLED=false

# Cache
CACHE_DRIVER=redis

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Mail (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@zenamanage.com"
MAIL_FROM_NAME="${APP_NAME}"

# Pusher (alternative to Redis for broadcasting)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://admin.zenamanage.com

# Request Tracking
X_REQUEST_ID_ENABLED=true

# Vite (for frontend assets)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
