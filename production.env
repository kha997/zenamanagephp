# Production Environment Configuration
# Dashboard System - Production Environment

# Application Configuration
APP_NAME="ZenaManage Dashboard"
APP_ENV=production
APP_KEY=base64:your-production-app-key-here
APP_DEBUG=false
APP_URL=https://dashboard.zenamanage.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql-prod
DB_PORT=3306
DB_DATABASE=zenamanage_dashboard_prod
DB_USERNAME=zenamanage_user
DB_PASSWORD=your-secure-production-password

# Cache Configuration
CACHE_DRIVER=redis
REDIS_HOST=redis-prod
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.zenamanage.com

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_REDIS_HOST=redis-prod
QUEUE_REDIS_PASSWORD=your-redis-password
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DATABASE=1

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.zenamanage.com
MAIL_PORT=587
MAIL_USERNAME=noreply@zenamanage.com
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@zenamanage.com
MAIL_FROM_NAME="ZenaManage Dashboard"

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting Configuration
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-app-key
PUSHER_APP_SECRET=your-pusher-app-secret
PUSHER_APP_CLUSTER=ap1

# WebSocket Configuration
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=6001
WEBSOCKET_SSL_KEY=/etc/ssl/private/zenamanage.key
WEBSOCKET_SSL_CERT=/etc/ssl/certs/zenamanage.crt

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=dashboard.zenamanage.com,api.zenamanage.com
SESSION_DOMAIN=.zenamanage.com

# Performance Configuration
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_INTERNED_STRINGS_BUFFER=16
OPCACHE_MAX_ACCELERATED_FILES=20000
OPCACHE_VALIDATE_TIMESTAMPS=false
OPCACHE_REVALIDATE_FREQ=0
OPCACHE_SAVE_COMMENTS=false

# Monitoring Configuration
SENTRY_LARAVEL_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Backup Configuration
BACKUP_DISK=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=zenamanage-backups
AWS_USE_PATH_STYLE_ENDPOINT=false

# CDN Configuration
CDN_URL=https://cdn.zenamanage.com
ASSET_URL=https://cdn.zenamanage.com/assets

# Feature Flags
FEATURE_DASHBOARD_CUSTOMIZATION=true
FEATURE_ROLE_BASED_ACCESS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_EXPORT_IMPORT=true
FEATURE_MOBILE_RESPONSIVE=true
FEATURE_DARK_MODE=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# SSL Configuration
FORCE_HTTPS=true
HTTPS_ONLY=true

# Database Optimization
DB_POOL_SIZE=20
DB_TIMEOUT=30
DB_RETRY_TIMES=3

# Redis Configuration
REDIS_POOL_SIZE=20
REDIS_TIMEOUT=5
REDIS_RETRY_TIMES=3

# File Storage
FILESYSTEM_DISK=s3
FILESYSTEM_CLOUD=s3

# Image Processing
IMAGE_DRIVER=imagick
IMAGE_QUALITY=85
IMAGE_FORMAT=webp

# Compression
GZIP_ENABLE=true
BROTLI_ENABLE=true

# Security Headers
SECURITY_HEADERS=true
CSP_ENABLE=true
HSTS_ENABLE=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block

# API Configuration
API_RATE_LIMIT=1000
API_RATE_WINDOW=60
API_VERSION=v1

# Dashboard Specific
DASHBOARD_CACHE_TTL=300
DASHBOARD_REFRESH_INTERVAL=30
DASHBOARD_MAX_WIDGETS=50
DASHBOARD_MAX_LAYOUTS=10

# Notification Configuration
NOTIFICATION_CHANNELS=mail,database,pusher
NOTIFICATION_RATE_LIMIT=100
NOTIFICATION_BATCH_SIZE=50

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=mixpanel
ANALYTICS_TOKEN=your-mixpanel-token

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Debug Configuration
DEBUG_BAR_ENABLED=false
QUERY_LOG_ENABLED=false
SLOW_QUERY_THRESHOLD=1000

# Timezone
APP_TIMEZONE=Asia/Ho_Chi_Minh
DB_TIMEZONE=+07:00

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
